<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('./partials/head'); %>
	</head>

	<body id="page-top">
		<%- include('./partials/navbar'); %>
		<div class="jumbotron bg-white">
			<div class="d-flex justify-content-between row mx-2">
				<h1 class="mb-4">Users</h1>
				<div class="d-flex align-items-center">
					<button onclick="window.location='/admin-caretaker-salaries';" class="btn btn-primary py-2 mr-2">View Salaries</button>
				</div>
			</div>
			<table class="table table-bordered table-hover table-striped">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Username</th>
						<th scope="col">Name</th>
						<th scope="col">Email</th>
						<th scope="col">Gender</th>
						<th scope="col">Address</th>
						<th scope="col">Date of Birth</th>
					</tr>
				</thead>
				<tbody>
					<% for(var i=0; i < data.length; i++) { %>
					<tr onclick="window.location='/admin-user-profile?username=<%= data[i].username%>';" class="pointer">
						<td><%= i+1%></td>
						<td><%= data[i].username%></td>
						<td><%= data[i].name%></td>
						<td><%= data[i].email%></td>
						<td><%= data[i].gender%></td>
						<td><%= data[i].address%></td>
						<td><%= data[i].dateofbirth.toLocaleDateString("en-US")%></td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</body>
</html>
