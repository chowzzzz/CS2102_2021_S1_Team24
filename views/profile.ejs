<!DOCTYPE html>
<html lang="en">
	<head>
		<link rel="stylesheet" href="/stylesheets/profile.css" />
		<%- include('./partials/head'); %>
	</head>

	<body>
		<%- include('./partials/navbar'); %>
		<main>
      <% if (!isAdmin) { %>
			<div class="jumbotron">
				<h1 class="display-1">Pet Owner Summary</h1>
				<div class="row">
					<a href="#">
						<img
							class="media-object mw150"
							src="https://bootdey.com/img/Content/avatar/avatar7.png"
							alt="..."
						/>
					</a>
					<div>
						<h1 class="display-4"><%= details[0].name %></h1>
						<br />
						<b>Email:</b> <%= details[0].email %>
						<br />
						<b>DOB:</b>
						<%= details[0].dateofbirth.getDate() %>-<%=
						details[0].dateofbirth.getMonth() %>-<%=
						details[0].dateofbirth.getFullYear() %>
						<br />
						<b>Gender:</b> <%= details[0].gender %>
						<br />
						<b>Address:</b> <%= details[0].address %>
						<br />
						<b>Join Date:</b>
						<%= details[0].joindate.getDate() %>-<%= details[0].joindate.getMonth()
						%>-<%= details[0].joindate.getFullYear() %>
					</div>
				</div>

				<br />
				<br />
				<br />

				<div>
					<table class="table">
						<thead class="thead-dark">
							<tr>
								<th scope="col">Pet Name</th>
								<th scope="col">Date of Birth</th>
								<th scope="col">Gender</th>
								<th scope="col">Description</th>
								<th scope="col">Special Requirements</th>
								<th scope="col">Personality</th>
							</tr>
						</thead>
						<% for (var i = 0; i < pets.length; i++) { %>
						<tr>
							<td scope="row" data-title="Pet Name"><%= pets[i].name %></td>
							<td scope="row" data-title="Date of Birth" date-type="date">
								<%= pets[i].dateofbirth.getDate() %>-<%=
								pets[i].dateofbirth.getMonth() %>-<%=
								pets[i].dateofbirth.getFullYear() %>
							</td>
							<td scope="row" data-title="Gender"><%= pets[i].gender %></td>
							<td scope="row" data-title="Description"><%= pets[i].description %></td>
							<td scope="row" data-title="Special Requirements">
								<%= pets[i].specialreqs %>
							</td>
							<td scope="row" data-title="Personality"><%= pets[i].personality %></td>
						</tr>
						<% } %>
					</table>
				</div>

				<br />
				<br />
				<br />

				<div>
					<table class="table">
						<thead class="thead-dark">
							<tr>
								<th scope="col">Care Taker</th>
								<th scope="col">Pet Name</th>
								<th scope="col">Request Date</th>
								<th scope="col">Start Date</th>
								<th scope="col">End Date</th>
								<th scope="col">Status</th>
								<th scope="col">Rating</th>
								<th scope="col">Payment Type</th>
								<th scope="col">Delivery Type</th>
								<th scope="col">Amount Paid</th>
								<th scope="col">Review</th>
							</tr>
						</thead>
						<% for (var i = 0; i < reservations.length; i++) { %>
						<tr>
							<td scope="col" data-title="Care Taker">
								<%= reservations[i].ctusername %>
							</td>
							<td scope="col" data-title="Pet Name">
								<%= reservations[i].petname %>
							</td>
							<td scope="col" data-title="Request Date">
								<%= reservations[i].requestdate.getDate() %>-<%=
								reservations[i].requestdate.getMonth() %>-<%=
								reservations[i].requestdate.getFullYear() %>
							</td>
							<td scope="col" data-title="Start Date">
								<%= reservations[i].startdate.getDate() %>-<%=
								reservations[i].startdate.getMonth() %>-<%=
								reservations[i].startdate.getFullYear() %>
							</td>
							<td scope="col" data-title="End Date">
								<%= reservations[i].enddate.getDate() %>-<%=
								reservations[i].enddate.getMonth() %>-<%=
								reservations[i].enddate.getFullYear() %>
							</td>
							<td scope="col" data-title="Status"><%= reservations[i].status %></td>
							<td scope="col" data-title="Status"><%= reservations[i].rating %></td>
							<td scope="col" data-title="Status">
								<%= reservations[i].paymenttype %>
							</td>
							<td scope="col" data-title="Status">
								<%= reservations[i].deliverytype %>
							</td>
							<td scope="col" data-title="Status">
								<%= reservations[i].amountpaid %>
							</td>
							<td scope="col" data-title="Status"><%= reservations[i].review %></td>
						</tr>
						<% } %>
					</table>
				</div>
      </div>
      <% } else { %>
        <div class="jumbotron">
          <h1 class="display-1">Administrator Summary</h1>
          <div class="row">
            <a href="#">
              <img
                class="media-object mw150"
                src="https://bootdey.com/img/Content/avatar/avatar7.png"
                alt="..."
              />
            </a>
          </div>
        </div>
      <% } %>
		</main>
	</body>
</html>
